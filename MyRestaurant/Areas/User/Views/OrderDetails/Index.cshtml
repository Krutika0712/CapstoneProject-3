@model IEnumerable<MyRestaurant.Models.OrderDetail>

@{
    ViewData["Title"] = "Index";
    
}

<h1 style="color:red;">Order</h1>

<p>
    <a class="btn btn-sm btn-danger" asp-action="Create">Create New Order</a>
</p>

<style>
table, th, td {
  border: 3px solid white;
  border-collapse: collapse;
}
th, td {
  background-color:darkgray;
}
body{
        
        background-image:url('https://i.pinimg.com/736x/09/8f/be/098fbe40a8db0ab7c47a0c62986fdc74.jpg');
        background-repeat:no-repeat;
        background-attachment:fixed;
        background-size:100%;
          }
</style>
<div class="card-columns">
    @foreach (var item in Model) {
        int a= item.MenuItem.MenuPrice;
        int b = item.Quantity;
        int Total = a * b;
        <div class="card" >
            <div class="card-header">
               @Html.DisplayNameFor(modelItem => item.CustomerName):- @item.CustomerName
            </div>
            <div class="card-body card bg-primary">
                   @Html.DisplayNameFor(modelItem => item.MenuItem.MenuItemName) :- @item.MenuItem.MenuItemName
                                   
                <br/>
                 @Html.DisplayNameFor(modelItem => item.OrderDateTime) :- @item.OrderDateTime                 
                   <br/>
                   @Html.DisplayNameFor(modelItem => item.Quantity) :- @item.Quantity
                   <br/>
                  @Html.DisplayNameFor(modelItem => item.MenuItem.MenuPrice)  :- @item.MenuItem.MenuPrice
                    <br/>
                  @Html.DisplayNameFor(modelItem => @Total)  :- @Total
                    
            </div>
            <div class="card-footer">
              
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.CustomerId">Details</a> 
               
            </div>
        </div>
    }
</div>
<a class="btn btn-sm btn-danger" asp-area="User" asp-controller="MenuItems" asp-action="Index">List of Menu Items</a>
 <a class="btn btn-sm btn-danger text-white" asp-area="" asp-page="/Index">Back To Home</a>